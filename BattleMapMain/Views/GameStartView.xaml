<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BattleMapMain.Views.GameStartView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BattleMapMain.ViewModels"
    Title="Game Start"
    x:DataType="viewmodels:GameStartViewModel">
    <VerticalStackLayout>
        <Label
            IsVisible="{Binding ShowCodeError}"
            Text="Code must not be empty"
            TextColor="Red" />
        <Entry IsEnabled="{Binding NotInServerCall}" Text="{Binding JoinCode}" />
        <Button
            Command="{Binding JoinSessionCommand}"
            IsEnabled="{Binding NotInServerCall}"
            Text="Join Session" />
        <Button
            Command="{Binding CreateSessionCommand}"
            IsEnabled="{Binding NotInServerCall}"
            Text="Create Session" />
        <ActivityIndicator IsRunning="{Binding InServerCall}" Color="Red" />
    </VerticalStackLayout>
</ContentPage>