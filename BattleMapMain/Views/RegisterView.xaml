<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BattleMapMain.ViewModels"
    x:Class="BattleMapMain.Views.RegisterView"
    x:DataType="viewmodels:RegisterViewModel"
    Title="Register"
    BackgroundColor="#f2f2f7">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16" IsEnabled="{Binding NotInServerCall}">

            <Grid ColumnDefinitions="*,*" >
                <Label Text="Username" TextColor="Black" />
                <Label Text="{Binding NameError}" TextColor="Red" FontSize="12" HorizontalOptions="End" IsVisible="{Binding ShowNameError}" />
            </Grid>
            <Entry
                Placeholder="Type username"
                Text="{Binding UserName}"
                HeightRequest="50"
                BackgroundColor="White"
                TextColor="Black"
                PlaceholderColor="#888" />

            <Grid ColumnDefinitions="*,*" >
                <Label Text="Email" TextColor="Black" />
                <Label Text="{Binding EmailError}" TextColor="Red" FontSize="12" HorizontalOptions="End" IsVisible="{Binding ShowEmailError}" />
            </Grid>
            <Entry
                Placeholder="Type email"
                Text="{Binding Email}"
                HeightRequest="50"
                BackgroundColor="White"
                TextColor="Black"
                PlaceholderColor="#888" />

            <Grid ColumnDefinitions="*,*" >
                <Label Text="Password" TextColor="Black" />
                <Label Text="{Binding PasswordError}" TextColor="Red" FontSize="12" HorizontalOptions="End" IsVisible="{Binding ShowPasswordError}" />
            </Grid>
            <Grid ColumnDefinitions="*,40">
                <Entry
                    Grid.Column="0"
                    Placeholder="Type password"
                    Text="{Binding Password}"
                    IsPassword="{Binding IsPassword}"
                    HeightRequest="50"
                    BackgroundColor="White"
                    TextColor="Black"
                    PlaceholderColor="#888" />
                <ImageButton
                    Grid.Column="1"
                    Source="passwordeye.jpg"
                    HeightRequest="40"
                    BackgroundColor="Transparent"
                    Command="{Binding ShowPasswordCommand}" />
            </Grid>

            <Grid ColumnDefinitions="*,*">
                <Button
                    Text="Cancel"
                    Command="{Binding CancelCommand}"
                    HeightRequest="45"
                    BackgroundColor="#ccc"
                    TextColor="Black"
                    Grid.Column="0" />
                <Button
                    Text="Register"
                    Command="{Binding RegisterCommand}"
                    HeightRequest="45"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Grid.Column="1" />
            </Grid>

            <ActivityIndicator
                IsRunning="{Binding InServerCall}"
                Color="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="40" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
