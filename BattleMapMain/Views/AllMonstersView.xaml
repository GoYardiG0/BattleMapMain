<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BattleMapMain.Views.AllMonstersView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:BattleMapMain.Models"
    xmlns:viewmodels="clr-namespace:BattleMapMain.ViewModels"
    Title="Monsters"
    x:DataType="viewmodels:AllMonstersViewModel"
    BackgroundColor="#f2f2f7"
    Shell.FlyoutBehavior="Disabled">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Entry
                Margin="0,0,0,10"
                BackgroundColor="White"
                HeightRequest="50"
                Placeholder="Search by monster name"
                PlaceholderColor="#888"
                Text="{Binding SearchBar}"
                TextColor="Black" />

            <CollectionView
                x:Name="collection"
                ItemsSource="{Binding SearchedMonsters}"
                SelectedItem="{Binding SelectedMonster}"
                SelectionMode="Single">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="Models:Monster">
                        <Border
                            Margin="0,5"
                            BackgroundColor="White"
                            Stroke="#ccc"
                            StrokeThickness="1">

                            <Grid Padding="10" ColumnDefinitions="*,Auto">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="{Binding MonsterName}"
                                    TextColor="#333"
                                    VerticalTextAlignment="Center" />

                                <Label
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding Hp}"
                                    TextColor="#666"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>



                <CollectionView.EmptyView>
                    <StackLayout
                        Padding="20"
                        HorizontalOptions="Center"
                        Spacing="10"
                        VerticalOptions="Center">
                        <Label
                            FontAttributes="Italic"
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="No monsters found."
                            TextColor="#999" />
                    </StackLayout>
                </CollectionView.EmptyView>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
