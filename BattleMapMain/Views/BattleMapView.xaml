<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattleMapMain.Views.BattleMapView"
             xmlns:drawable="clr-namespace:BattleMapMain.ViewModels"
             Title="BattleMapView">
    <ContentPage.Resources>
        <drawable:GraphicsDrawable x:Key="drawable" />
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Border>
            <GraphicsView 
                Drawable="{StaticResource drawable}"
                HeightRequest="300"
                WidthRequest="400"      
                x:Name="MapGraphicsView"
                EndInteraction="GraphicsView_EndInteraction"
                StartInteraction="GraphicsView_StartInteraction"
                />
        </Border>
    </VerticalStackLayout>
</ContentPage>